
<h4>Posts</h4><br>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Usu√°rio</th> 
      <th scope="col">Mensagem</th>      
      <th scope="col">Postado em</th>      
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
        <th scope="row"> <%= post.id %></th>
        <td> <%= post.user.name %> </td>
        <!-- <td> <%= link_to post.body.split("").first(50).join(""), admin_post_path(post) %> </td> -->
        <td> <%= link_to post.body.truncate(50), admin_post_path(post) %> </td>
        <td> <%= post.created_at.strftime("%d/%m/%Y %H:%M") %> </td>              
    <% end %>
  </tbody>
</table>